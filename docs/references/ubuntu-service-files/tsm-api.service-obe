[Unit]
Description=The Server Manager API Application
After=network.target
StartLimitIntervalSec=60
StartLimitBurst=5

[Service]
Type=simple
User=nick
Group=nick
WorkingDirectory=/home/nick/applications/TheServerManagerAPI
Environment="NODE_ENV=production"
Environment="PATH=/usr/bin:/usr/local/bin"
EnvironmentFile=/home/nick/applications/TheServerManagerAPI/.env
ExecStart=/usr/bin/node dist/server.js
# For APIs
Restart=on-failure
RestartSec=5


[Install]
WantedBy=multi-user.target