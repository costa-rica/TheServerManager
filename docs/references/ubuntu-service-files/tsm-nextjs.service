[Unit]
Description=The Server Manager NextJS Application
After=network.target

[Service]
Type=simple
User=app_runner
Group=nick
WorkingDirectory=/home/nick/applications/TheServerManager/web
Environment="NODE_ENV=production"
Environment="PORT=8003"
Environment="PATH=/usr/bin:/usr/local/bin"
EnvironmentFile=/home/nick/applications/TheServerManager/web/.env
ExecStart=/usr/bin/npm start
Restart=on-failure
RestartSec=5
StartLimitIntervalSec=60
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
